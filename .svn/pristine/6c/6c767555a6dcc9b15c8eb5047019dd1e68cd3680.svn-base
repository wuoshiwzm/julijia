    /**
     * @param $user_id
     * 返回用户所有订单信息
     */
    static function getOrdersByUser($user_id)
    {

        $data = Source_Order_OrderInfo::leftjoin('order_payment', 'order_info.id', '=', 'order_payment.order_id')
